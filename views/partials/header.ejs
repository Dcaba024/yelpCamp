<!DOCTYPE html>
<html>
    <head>
        <title>YelpCamp</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" href="/stylesheets/main.css">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/">YelpCamp</a>
                </div>
                <div class="collapse navbar-collapse justify-content-end">
                    <ul class="nav navbar-nav">
                       <% if(!currentUser){ %>
                            <li><a href="/login" class="nav-link" href="/">Login</a></li>
                            <li><a href="/register" class="nav-link" href="/">Signup</a></li>
                      <%  }else { %>
                            <li><a href="" class="nav-link">Signed in as <%= currentUser.username %></a></li>
                            <li><a href="/logout" class="nav-link" href="/">Logout</a></li>
                    <%    } %>
                        
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container">
            <% if(error && error.length > 0) { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
          </div>
          <% } %>
          <% if(success && success.length > 0) { %>
          <div class="alert alert-success" role="alert">
            <%= success %>
          </div>
          <% } %>
        </div>
        
     


  